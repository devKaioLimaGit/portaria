<body>
  <div class="container">
    <!-- Formulário -->
    <div class="form-container">
      <h2>Dados da Portaria</h2>
      <form id="formulario">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" required />

        <label for="portaria">Portaria:</label>
